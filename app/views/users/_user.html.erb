<li>
	<%= link_to gravatar_for(user, size: 60), user %>
	<%= link_to user.name, user %>
	<% if current_user.admin? || current_user?(user) %>
		| <%= link_to "Delete User", user, method: :delete,
																		 data: { confirm: "Delete User Profile?" },
																		 class: "btn btn-danger" %>
	<% end %>
</li>
